---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from "../utils/formatDate";

type Props = {
    entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;

---

<article class="flex flex-col">
    <a href={`/${entry.collection}/${entry.slug}`} class="hover:text-blue-500" transition:name={entry.data.title}>{entry.data.title}</a>
    <time datetime={entry.data.date.toString()} class="text-xs text-neutral-500 dark:text-neutral-600">{formatDate(entry.data.date)}</time>
</article>