---
import '../styles/global.css';
import Head from "../components/Head.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="zh">
    <head>
        <Head title = {title} description = {description}/>
    </head>
	
    <body class="size-full scroll-smooth text-neutral-800 text-wrap break-all dark:bg-neutral-900 dark:text-neutral-400" ontouchstart="ontouchstart">
        <slot />
    </body>
</html>

