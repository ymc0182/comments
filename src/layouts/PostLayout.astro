---
import BaseLayout from "./BaseLayout.astro"
import HeaderComponent from "./components/HeaderComponent.astro";
import FooterComponent from "./components/FooterComponent.astro";

const { frontmatter  } = Astro.props;
---

<BaseLayout >
    <HeaderComponent />
    
    <main class="container mx-auto px-6 pt-8 pb-2">
        <h1 class="text-2xl my-0 leading-none text-neutral-950 dark:text-neutral-400">{frontmatter.title}</h1>
        <section class="flex flex-wrap gap-5 items-center my-6 text-xs font-light text-neutral-400 dark:text-neutral-600">
            <div class="flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" />
                </svg>
                <span class="border-b border-dashed border-neutral-400/70 dark:border-neutral-600">{frontmatter.date.toString().slice(0,10)}</span>
            </div>
        </section>
        <article id="post_content" class="text-base align-middle tracking-wider leading-relaxed">
            <slot />
        </article>
    </main>

    <section class="bg-neutral-50 dark:bg-neutral-800/30">
        <div class="container mx-auto px-6 py-4 flex items-center text-sm font-thin leading-relaxed text-neutral-400/70 dark:text-neutral-600">
            <div >
                <p>本文链接：</p>
                <p>发布时间：</p>
                <p>作者：</p>
                <p>版权:</p>
            </div>
            <div >
                <p>{Astro.url}</p>
                <p>{frontmatter.date && frontmatter.date.toString().slice(0,10)}</p>
                <p>{frontmatter.author && frontmatter.author}</p>
                <p class="inline-block text-xs border rounded px-1 border-neutral-200 dark:border-neutral-700">{frontmatter.copy ? frontmatter.copy : '未声明'}</p>
            </div>
        </div>
    </section>

    <section class="container mx-auto p-6">
        <div class="giscus"></div>
    </section>

    <FooterComponent />
</BaseLayout>

<script src="https://giscus.app/client.js"
        data-repo="ymc0182/myblog"
        data-repo-id="R_kgDOMiAgoA"
        data-category="General"
        data-category-id="DIC_kwDOMiAgoM4Chifv"
        data-mapping="title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
        data-lang="zh-CN"
        data-loading="lazy"
        crossorigin="anonymous"
        async>
</script>

<style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    @layer base {

        #post_content h1, #post_content h2, #post_content h3, #post_content h4, #post_content h5, #post_content h6 {
            @apply text-neutral-950 dark:text-neutral-400;
        }
        #post_content h1 { @apply text-2xl; }
        #post_content h2 { @apply text-xl;  }
        #post_content h3 { @apply text-lg;  }

        #post_content p, 
        #post_content ul, 
        #post_content ol, 
        #post_content pre, 
        #post_content h1, 
        #post_content h2, 
        #post_content h3, 
        #post_content h4, 
        #post_content h5, 
        #post_content h6,
        #post_content hr {
            @apply my-5;
        }

        #post_content img {
            @apply w-auto max-w-full;
        }

        #post_content pre {
            @apply block overflow-auto max-h-[50vh] p-3 rounded;
        }
        #post_content pre::-webkit-scrollbar {
            @apply w-0 h-2;
        }
        #post_content pre::-webkit-scrollbar-thumb {
            @apply rounded-full bg-neutral-400;
        }

        #post_content :not(pre)>code, #post_content kbd {
            @apply rounded-md px-1.5 py-0.5 text-sm font-light border border-neutral-200 bg-neutral-50 text-neutral-500 dark:bg-neutral-800/50 dark:border-neutral-800;
        }

        #post_content kbd {
            @apply inline-flex gap-1 items-center shadow rounded px-1.5 py-0.5
        }

        #post_content kbd::before {
            @apply w-3 h-3;
            content: "";
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" /></svg>');
            background-size: contain;
            background-repeat: no-repeat;
        }
    }
</style>