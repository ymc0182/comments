---
import PageLayout from "../layouts/PageLayout.astro";
import { formatDate } from "../utils/formatDate";

const allPosts = await Astro.glob('./posts/*.*');
---

<PageLayout>

	<main class="container mx-auto p-8 space-y-6">

		{allPosts.map((post) => 
			<article>
				<h1 class="tracking-wider leading-relaxed"><a href={post.url} >{post.frontmatter.title}</a></h1>
				<date class="text-xs text-neutral-400 dark:text-neutral-700">{formatDate(post.frontmatter.date)}</date>
			</article>
		)}

	</main>

</PageLayout>